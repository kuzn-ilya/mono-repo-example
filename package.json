{
  "private": true,
  "description": "Example of mono repo",
  "author": "Ilya Kuznetsov <kuzn.ilya@gmail.com>",
  "repository": "https://github.com/kuzn-ilya/mono-repo-example.git",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuzn-ilya/mono-repo-example/issues"
  },
  "homepage": "https://github.com/kuzn-ilya/mono-repo-example#readme",
  "scripts": {
    "clean": "lerna exec -- rimraf build",
    "build": "yarn eslint && yarn test && yarn rollup",
    "eslint": "eslint ./",
    "test:dev": "cross-env NODE_ENV=development jest packages --coverage && ncp ./coverage/coverage-final.json ./coverage/coverage-dev-final.json",
    "test:prod": "cross-env NODE_ENV=production jest packages --coverage && ncp ./coverage/coverage-final.json ./coverage/coverage-prod-final.json",
    "test:ts": "lerna exec -- typings-tester --dir src/ts-tests",
    "test": "yarn test:dev && yarn test:prod && node ./scripts/coverage.js && yarn test:ts",
    "format": "prettier --write **/*.{js,jsx,d.ts} !**/build/** !.vscode/**",
    "rollup": "lerna exec -- \"cross-env-shell node $LERNA_ROOT_PATH/scripts/build.js\""
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "3.0.0",
    "@semantic-release/git": "7.0.4",
    "babel-cli": "6.26.0",
    "babel-code-frame": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "chalk": "2.4.1",
    "cli-table": "0.3.1",
    "codecov": "3.1.0",
    "cross-env": "5.2.0",
    "eslint": "4.19.0",
    "eslint-plugin-import": "2.14.0",
    "gzip-size": "5.0.0",
    "jest": "23.6.0",
    "lerna": "^3.4.3",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "0.66.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "9.1.8",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-uglify": "6.0.0",
    "semantic-release": "15.9.16",
    "typescript": "3.1.3",
    "typings-tester": "0.3.2",
    "uglify-js": "^3.4.9"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/scripts/"
    ],
    "coverageReporters": [
      "json"
    ],
    "modulePathIgnorePatterns": [
      "./build"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "transform": {
      "^.+\\.jsx?$": "./scripts/jest-transform.js"
    },
    "testURL": "http://localhost"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors"
    ]
  },
  "eslintIgnore": [
    "**/build/**",
    "**/npm/**",
    "**/src/__tests__/**",
    "coverage/**",
    "scripts/**"
  ],
  "release": {
    "verifyConditions": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "./build"
      },
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "generateNotes": [
      "@semantic-release/release-notes-generator"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "docs/CHANGELOG.md",
        "changelogTitle": "# Change Log"
      },
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "./build"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "docs/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "./build"
      },
      "@semantic-release/github"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "name": "kuzn-ilya-test"
}
